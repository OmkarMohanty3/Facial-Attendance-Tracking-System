<body>
    <h1>Face Recognition System</h1>


    <img id="videoFeed" src="{{ url_for('video_feed') }}" alt="Face Recognition Feed">
    <div id="studentInfo">
        <!-- Student information will be displayed here -->
    </div>
    
    <script>
        // Use JavaScript to periodically update student information
        setInterval(() => {
            fetch('/get_student_info')
                .then(response => response.json())
                .then(data => {
                    // Update student information in the HTML
                    document.getElementById('studentInfo').innerHTML = data.studentInfo;
                })
                .catch(error => console.error('Error fetching student information:', error));
        }, 5000); // Update every 5 seconds (adjust as needed)
    </script>
</body>
</html>
